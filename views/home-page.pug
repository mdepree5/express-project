extends layout

append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/splash-banner.css")
  link(rel="stylesheet" href="/stylesheets/rh-feed.css")
  link(rel="stylesheet" href="/stylesheets/rh-articles.css")
  link(rel="stylesheet" href="/stylesheets/splash-signup.css")
  link(rel="stylesheet" href="/stylesheets/splash-footer.css")
  //- add page specific js
  script(src="/javascripts/index.js" type="module" defer)
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    
    meta(property='og:title' content='Rabbit Hole')
    meta(property='og:type', content='Website')
    meta(property="og:image" content="https://md5-self.s3.amazonaws.com/rabbit-hole-home.png")
    meta(property="og:description" content="Medium-inspired group project: Express, PostgreSQL, CSS, Pug")


block content
  div#main-banner
    div.banner-title
      h2 SWE student with questions, answers, tips?
      h2 You're in the right place.
      a(name='feed' href=`/${locals.authenticated ? 'posts/create' : 'users/login'}`) Start Writing
  div#feed
    div.feed-heading What's new in the rabbit hole?
    div.feed-posts
      div.post
        h4.post-title= posts[0].title
        div.article-content= posts[0].content
          a(href=`/posts/${posts[0].id}`) Read More
      div.post
        h4.post-title= posts[1].title
        div.article-content= posts[1].content
        div.article-button
          a(href=`/posts/${posts[1].id}`) Read More
      div.post
        h4.post-title= posts[2].title
        div.article-content= posts[2].content
        div.article-button
          a(href=`/posts/${posts[2].id}`) Read More
      div.post
        h4.post-title= posts[3].title
        div.article-content= posts[3].content
        div.article-button
          a(href=`/posts/${posts[3].id}`) Read More
  div#article-section-one
    div.article-one
      div.first-image
      div.first-article
        h4.article-title= posts[4].title
        div.article-snippet= posts[4].content
  div#article-section-two
    div.article-two
      div.second-article
        h4.article-title= posts[5].title
        div.article-snippet= posts[5].content
      div.second-image
  div#sign-up-section
    div.top-section
      h3.reminder You're in good company
      p.join Join our community today to get all the answers you need to thrive in your career!
    div.bottom-section
      div.splash-quote
        p.rabbit-quote "If you don't know where you are going any road will get you there."
        blockquote - White Rabbit
        span.book-reference 'Alice In Wonderland'
        if !locals.authenticated
          button.join-btn
            a(href='/users/create') Join Today
          button.login-btn
            a(href='/users/login') Sign In
  div#splash-footer
    div#footer-links
      a(href="#") Home
      a(href="https://stackoverflow.com/") Stack Overflow
      a(href="https://developer.mozilla.org/en-US/") MDN Docs
    div#footer-collaborators
      a(href="https://github.com/hamletv")
        img(src="/git-photos/hamlet.jpeg", alt="hamlet-v")
      a(href="https://github.com/mdepree5")
        img(src="/git-photos/mitch.jpeg", alt="mitch-d")
      a(href="https://github.com/Ashley-B1")
        img(src="/git-photos/git-skye.jpeg", alt="skye-b")
      a(href="https://github.com/wanyi886")
        img(src="/git-photos/wan-yi.jpeg", alt="wan-l")
    div#copyright ©️ Rabbit Hole 2022 | Be informed
